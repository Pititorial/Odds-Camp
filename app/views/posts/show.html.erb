<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-3xl font-bold mb-2"><%= @post.title %></h1>
          <p class="text-gray-600">
            Posted by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %> ago
          </p>
        </div>
        <% if current_user == @post.user %>
          <div class="flex space-x-2">
            <%= link_to 'Edit', edit_post_path(@post), class: 'text-blue-500 hover:text-blue-700' %>
            <%= button_to 'Delete', post_path(@post), method: :delete, class: 'text-red-500 hover:text-red-700', data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>

      <div class="prose max-w-none mb-8">
        <%= @post.content %>
      </div>

      <div class="flex items-center space-x-4 text-sm text-gray-500 mb-8">
        <div class="flex items-center">
          <% if current_user && @post.likes.exists?(user: current_user) %>
            <%= button_to post_like_path(@post, @post.likes.find_by(user: current_user)), 
                method: :delete, 
                class: 'text-red-500 hover:text-red-700' do %>
              <span class="mr-1"><%= @post.like_count %></span>
              <span>Likes</span>
            <% end %>
          <% else %>
            <%= button_to post_likes_path(@post), 
                method: :post, 
                class: 'text-gray-500 hover:text-red-500' do %>
              <span class="mr-1"><%= @post.like_count %></span>
              <span>Likes</span>
            <% end %>
          <% end %>
        </div>

        <div class="flex items-center">
          <% if current_user && @post.shares.exists?(user: current_user) %>
            <%= button_to post_share_path(@post, @post.shares.find_by(user: current_user)), 
                method: :delete, 
                class: 'text-blue-500 hover:text-blue-700' do %>
              <span class="mr-1"><%= @post.share_count %></span>
              <span>Shares</span>
            <% end %>
          <% else %>
            <%= button_to post_shares_path(@post), 
                method: :post, 
                class: 'text-gray-500 hover:text-blue-500' do %>
              <span class="mr-1"><%= @post.share_count %></span>
              <span>Shares</span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="border-t pt-6">
        <h2 class="text-xl font-bold mb-4">Comments</h2>
        
        <% if user_signed_in? %>
          <%= form_with(model: [@post, @comment], local: true, class: "mb-6") do |f| %>
            <div class="mb-4">
              <%= f.text_area :content, rows: 3, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Write a comment..." %>
            </div>
            <%= f.submit "Post Comment", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        <% end %>

        <div class="space-y-4">
          <% @comments.each do |comment| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex justify-between items-start mb-2">
                <p class="text-sm text-gray-600">
                  <%= comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago
                </p>
                <% if current_user == comment.user %>
                  <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, class: "text-red-500 hover:text-red-700 text-sm" %>
                <% end %>
              </div>
              <p class="text-gray-800"><%= comment.content %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 