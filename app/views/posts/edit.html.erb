<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Edit Post</h1>

    <%= form_with(model: @post, local: true, class: "ant-form ant-form-vertical") do |f| %>
      <% if @post.errors.any? %>
        <div class="ant-alert ant-alert-error">
          <h2 class="font-bold mb-2">
            <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
          </h2>
          <ul class="list-disc list-inside">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="ant-form-item">
        <%= f.label :title, class: "ant-form-item-label" %>
        <div class="ant-form-item-control">
          <%= f.text_field :title, class: "ant-input" %>
        </div>
      </div>

      <div class="ant-form-item">
        <%= f.label :content, class: "ant-form-item-label" %>
        <div class="ant-form-item-control">
          <%= f.text_area :content, rows: 5, class: "ant-input" %>
        </div>
      </div>

      <div class="ant-form-item">
        <div class="ant-form-item-control">
          <div class="ant-space ant-space-horizontal">
            <%= link_to "Cancel", post_path(@post), class: "ant-btn ant-btn-default" %>
            <%= f.submit "Update Post", class: "ant-btn ant-btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 