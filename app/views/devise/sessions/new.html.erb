<div class="sign-in-container">
  <div class="sign-in-header">
    <h2 class="sign-in-title">
      Sign in to Odds Camp
    </h2>
  </div>

  <div class="sign-in-form-container">
    <div class="sign-in-form-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign-in-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="remember-me-container">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
              <%= f.label :remember_me, class: "remember-me-label" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "sign-in-button" %>
        </div>
      <% end %>

      <div class="divider">
        <div class="divider-line">
          <div class="divider-line-inner"></div>
        </div>
        <div class="divider-text">
          <span>Or</span>
        </div>
      </div>

      <div>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>
      </div>
    </div>
  </div>
</div> 